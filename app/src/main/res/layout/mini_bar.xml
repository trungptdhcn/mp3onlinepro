<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mini_bar_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#172534"
        android:layout_alignParentBottom="true"
>
    <RelativeLayout
            android:id="@+id/minibar_buttons"
            android:layout_width="match_parent"
            android:layout_height="54.0dip"
            android:layout_marginLeft="@dimen/spacing_small"
            android:clickable="true"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mini_bar_ivThumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="1dp"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/white_smoke"/>
        <RelativeLayout
                android:id="@+id/mini_bar_rlContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mini_bar_ivThumbnail"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:clickable="true"
                android:layout_toLeftOf="@+id/mini_bar_miniBarController"
        >
            <TextView
                    android:id="@+id/mini_bar_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
            />
            <TextView
                    android:id="@+id/mini_bar_tvArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_below="@+id/mini_bar_tvTitle"
                    android:maxLines="1"
                    android:ellipsize="end"
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/mini_bar_miniBarController"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="7.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="7.0dip"
                android:layout_alignParentRight="true">
            <com.pnikosis.materialishprogress.ProgressWheel
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progress_wheel"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    wheel:matProg_barWidth="1.5dp"
                    wheel:matProg_barColor="@color/green_dark"
                    wheel:matProg_progressIndeterminate="true"
                    android:layout_margin="5.0dip"
                    android:visibility="gone"/>
            <ImageView
                    android:id="@+id/mini_bar_loading_button"
                    android:background="@drawable/minibar_btn_pause"
                    android:visibility="gone"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"/>
            <ImageView
                    android:id="@+id/mini_bar_circle_button"
                    android:background="@drawable/minibar_circle"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"
            />
            <mp3onlinepro.trungpt.com.mp3onlinepro.ui.customview.ArcImageView
                    android:id="@+id/mini_bar_time_arc"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"
            />
            <ImageView
                    android:id="@+id/mini_bar_pause_button"
                    android:background="@drawable/minibar_btn_pause"
                    android:visibility="gone"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"/>
            <ImageView
                    android:id="@+id/mini_bar_play_button"
                    android:background="@drawable/minibar_btn_play"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_margin="5.0dip"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>