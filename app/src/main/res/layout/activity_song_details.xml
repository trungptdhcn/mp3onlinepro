<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
>
    <ImageView
            android:id="@+id/activity_song_details_ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_media_controller">
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/activity_song_details_rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:background="@android:color/transparent"
    >
        <TextView
                android:id="@+id/activity_song_details_tvSongsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cool Girl sdafasd Ã¡dfasdfsa "
                android:textSize="@dimen/text_size_huge"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:id="@+id/activity_song_details_tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_song_details_tvSongsName"
                android:textSize="@dimen/text_size_large"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="--- Son Tung MTP ---"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/activity_song_details_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_below="@+id/activity_song_details_rlHeader"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_above="@+id/indicator"
            android:background="@android:color/transparent"
    />
    <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/activity_song_details_rlBottom"/>
    <RelativeLayout
            android:id="@+id/activity_song_details_rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/activity_song_details_tvCurentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/white"
                android:text="3:05"
                android:layout_alignParentTop="true"
                />
        <TextView
                android:id="@+id/activity_song_details_tvTotalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/white"
                android:text="3:05"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
        />
        <SeekBar
                android:id="@+id/activity_song_details_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                style="@style/Base.Widget.AppCompat.SeekBar"
                android:secondaryProgressTint="@color/red_tranparent"
                android:secondaryProgressTintMode="src_in"
                android:layout_below="@+id/activity_song_details_tvCurentDuration"
        />

        <RelativeLayout
                android:id="@+id/activity_song_details_rlControl"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/activity_song_details_seekbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent">
            <ImageButton
                    android:id="@+id/activity_song_details_btPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_btn_pre_normal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
            />
            <ImageButton
                    android:id="@+id/activity_song_details_btPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_btn_play_normal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:visibility="gone"
            />
            <ImageButton
                    android:id="@+id/activity_song_details_btPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_btn_pause_normal"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

            />
            <ImageView
                    android:id="@+id/activity_song_details_btCirclePause"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/player_btn_play_y_normal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:visibility="gone"
            />
            <com.pnikosis.materialishprogress.ProgressWheel
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progress_wheel"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    wheel:paddingEnd="@dimen/spacing_normal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    wheel:matProg_barWidth="1.5dp"
                    wheel:matProg_barColor="@color/green_dark"
                    wheel:matProg_progressIndeterminate="true"
                    wheel:matProg_fillRadius="true"
            />
            <ImageButton
                    android:id="@+id/activity_song_details_btNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_btn_next_normal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
            />
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_song_details_rlControl"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <CheckBox
                        android:id="@+id/activity_song_details_btFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_favorite"
                        android:layout_alignParentLeft="true"
                        android:button="@null"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <ImageButton
                        android:id="@+id/activity_song_details_btDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/player_btn_download_normal"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <CheckBox
                        android:id="@+id/activity_song_details_btRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_repeat"
                        android:layout_alignParentRight="true"
                        android:button="@null"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <ImageButton
                        android:id="@+id/activity_song_details_yourPlayList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_pll_button"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
