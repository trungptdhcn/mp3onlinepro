<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg">
    <RelativeLayout
            android:id="@+id/activity_playlist_rlInfomation"
            android:layout_width="match_parent"
            android:layout_height="200dp"
    >

        <ImageView
                android:id="@+id/activity_playlist_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_media_controller">
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/activity_playlist_rlContainerInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/spacing_normal"
        >
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/activity_playlist_ivPlayListThumbnail"
                    android:src="@drawable/avatar_default"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:civ_border_width="1dp"
                    android:layout_centerVertical="true"
                    app:civ_border_color="@color/white_smoke"/>
            <TextView
                    android:id="@+id/activity_playlist_tvArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Singer"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_toRightOf="@+id/activity_playlist_ivPlayListThumbnail"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/activity_playlist_tvPlayListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Song Name"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <include layout="@layout/banner_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
            android:layout_below="@+id/activity_playlist_rlInfomation"/>
    <LinearLayout
            android:id="@+id/activity_playlist_title_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/color_b3"
            android:paddingTop="@dimen/spacing_mini"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/adView"
    >
        <com.astuetz.PagerSlidingTabStrip
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@android:color/transparent"
                app:pstsDividerColor="@android:color/transparent"
                app:pstsIndicatorColor="@color/green_dark"
                app:pstsUnderlineColor="@color/gray_dark"
                app:pstsUnderlineHeight="0.5dp"
                app:pstsIndicatorHeight="4dp"
                app:pstsTextAllCaps="false"
                app:pstsTabPaddingLeftRight="15dp"
                app:pstsShouldExpand="true"
        />
        <View
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>
        <View
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>
        <ImageView
                android:id="@+id/activity_playlist_title_search_btn"
                android:layout_width="60.0dip"
                android:layout_height="44.0dip"
                android:src="@drawable/maintabbar_button_search_selector"
                android:scaleType="fitXY"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.cntt.freemusicdownloadnow.MainActivity"
            android:layout_below="@+id/activity_playlist_title_bar"/>

</RelativeLayout>